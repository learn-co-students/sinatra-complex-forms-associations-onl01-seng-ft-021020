<h1>Update Pet</h1>
 
  <form action="/pets/<%= @pet.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Edit the Pets's Name:</label>
    <br>
    <input type="text" name="pet[name]" value="<%= @pet.name %>" id="pet_name">
    <br>
    <br>
    <label>Change Existing Owner</label>
    <br>
    <% @owners.each do |owner| %>
        <input type="radio" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>" <%='checked' if owner.pets.include?(@pet)%>>
        <%=owner.name%>
        </input>
      <% end %>
    <br>
    <br>
    <label>New Owner<label>
    <br>
    <label>name:</label>
    <input type="text" name="owner[name]" id="owner_name"></input>
    <br><br>
    <input type ="submit" value="Update Pet"></input>
 </form>
